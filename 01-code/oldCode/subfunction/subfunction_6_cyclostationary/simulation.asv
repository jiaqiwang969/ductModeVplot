%fp=fi;%仿真内圈
%Q=fr;
fp=fo;%仿真外圈
Q=0;
fn=2000;
N=20;
A=1;
var_tao=0.03;
x=create_bearing_signal(N,A,fs,fn,fp,var_tao,Q);
