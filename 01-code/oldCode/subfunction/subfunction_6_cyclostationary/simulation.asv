clc;
close all;
set(0,'DefaultAxesFontSize',14,'DefaultAxesLineWidth',1,'DefaultFigurePosition',[100 100 780 360]);
fs=10000;%采样频率
fr=12;%转频
%fc=12;%保持架
fo=37;%外圈通过频率
fb=143;%滚动体故障频率
fi=54;%内圈通过频
